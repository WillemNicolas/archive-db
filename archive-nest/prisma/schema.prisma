generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model table_conversion_info {
  pk_id                     Int                  @id @default(autoincrement())
  creation_at               DateTime             @default(now()) @db.Timestamptz(6)
  levels                    BigInt               @default(1)
  time_steps                BigInt               @default(1)
  xsize                     BigInt
  ysize                     BigInt
  xfirst                    Float                @db.Real
  xinc                      Float                @db.Real
  yfirst                    Float                @db.Real
  yinc                      Float                @db.Real
  nan_value_encoding        Int                  @default(255) @db.SmallInt
  threshold                 Float                @default(3) @db.Real
  execution_info            table_execution_info @relation("execution_info", fields: [table_execution_info_pk_id], references: [pk_id])
  image_paths               table_image_paths[]  @relation("conversion_info")
  table_execution_info_pk_id Int
}

model table_execution_info {
  pk_id           Int                     @id @default(autoincrement())
  exp_id          String
  config          String
  nimbus_version  String
  execution_date  DateTime                @default(now()) @db.Timestamp(6)
  var_clt         Boolean                 @default(false)
  var_currents    Boolean                 @default(false)
  var_height      Boolean                 @default(false)
  var_liconc      Boolean                 @default(false)
  var_mlosts      Boolean                 @default(false)
  var_pfts        Boolean                 @default(false)
  var_pr          Boolean                 @default(false)
  var_sic         Boolean                 @default(false)
  var_snc         Boolean                 @default(false)
  var_tas         Boolean                 @default(false)
  var_tos         Boolean                 @default(false)
  var_winds       Boolean                 @default(false)
  metadata        Json?                   @db.Json
  conversion_info table_conversion_info[] @relation("execution_info")
}

model table_image_paths {
  pk_id                      Int                   @id @default(autoincrement())
  path                       Unsupported("path")
  extension                  String?
  metadata                   Json?                 @db.Json
  conversion_info            table_conversion_info @relation("conversion_info", fields: [table_conversion_info_pk_id], references: [pk_id])
  table_conversion_info_pk_id Int
}
